{
  "version": 2,
  "name": "nextjs",
  "alias": "artisanfront.com",
  "builds": [{ "src": "package.json", "use": "@now/next" }],
  "routes": [
    {
      "src": "/(.*)",
      "status": 301,
      "headers": {
        "Location": "https://www.artisanfront.com/$1"
      }
    },
    { "src": "/", "status": 301, "headers": { "Location": "/en/" } },
    { "src": "/en/", "dest": "/index?lang=en" },
    { "src": "/es/", "dest": "/index?lang=es" },
    {
      "src": "/es/articulo/(?<name>[^/]+)$",
      "dest": "/article?name=$name&lang=es"
    },
    {
      "src": "/en/article/(?<name>[^/]+)$",
      "dest": "/article?name=$name&lang=en"
    }
  ]
}
